<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e0e0"
    tools:context="com.htic.amar.kiosk.Temp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="60dp"
                android:layout_width="1dp"
                android:layout_weight="0.1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/iconsnew" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.8"
                android:text="Height and Weight"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TableRow
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <ImageView
                android:layout_height="90dp"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:src="@drawable/height" />

            <ImageView
                android:layout_height="90dp"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:src="@drawable/weightnew" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView

                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="0.0"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold" />

        </TableRow>


        <!--<Button-->
            <!--android:id="@+id/btn_select"-->
            <!--android:layout_width="250dp"-->
            <!--android:layout_height="75dp"-->
            <!--android:layout_gravity="center_vertical|center"-->
            <!--android:layout_marginTop="55dp"-->
            <!--android:background="@drawable/shape"-->
            <!--android:text="HEIGHT AND WEIGHT"-->
            <!--android:textColor="#ffffff" />-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/hwreload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/shape"
                android:text="Instruction Video"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/shape"
                android:text="Result"
                android:textColor="#ffffff" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
