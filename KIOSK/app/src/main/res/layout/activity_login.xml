<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e0e0"
    tools:context="com.htic.amar.kiosk.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="fill_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/header_logo"
            tools:layout_editor_absoluteX="332dp"
            tools:layout_editor_absoluteY="16dp" />

        <VideoView
            android:id="@+id/kioskvideo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical|center"
            android:layout_marginTop="15dp"
            android:layout_weight="5.19" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_horizontal|center"
                android:textStyle="bold"
                android:textColor="#590000"
                android:textSize="22dp"
                android:text="Aadhar card Number" />

            <EditText
                android:id="@+id/aadhaartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/textboxstyle"
                android:ems="20"
                android:hint="Enter your Aadhar card Number"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape"
            android:text="Submit"
            android:textColor="#ffffff" />

    </LinearLayout>


</RelativeLayout>
